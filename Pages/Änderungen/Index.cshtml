@page
@model Software_Projekt.Pages.Änderungen.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Änderung[0].OwnerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Änderung[0].ProgrammverantwortlichenId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Änderung[0].ModulverantwortlichenId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Änderung[0].ModulId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Änderung[0].Element)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Änderung[0].NeuerEintrag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Änderung[0].Datum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Änderung[0].ModulhandbuchId)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Änderung[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Änderung)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OwnerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProgrammverantwortlichenId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModulverantwortlichenId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModulId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Element)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.NeuerEintrag)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Datum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModulhandbuchId)
                </td>
             
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @if ((await AuthorizationService.AuthorizeAsync(
                 User, item,
                 ContactOperations.Update)).Succeeded)
                    {
                        <a asp-page="./Edit" asp-route-id="@item.ÄnderungId">Edit</a>
                        <text> | </text>
                    }

                    <a asp-page="./Details" asp-route-id="@item.ÄnderungId">Details</a>

                    @if ((await AuthorizationService.AuthorizeAsync(
                 User, item,
                 ContactOperations.Delete)).Succeeded)
                    {
                        <text> | </text>
                        <a asp-page="./Delete" asp-route-id="@item.ÄnderungId">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>