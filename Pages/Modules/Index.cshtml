                @Html.DisplayNameFor(model => model.Modul[0].Literaturangaben)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modul[0].ModulhandbuchId)
            </th>
        
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Modul)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModulverantwortlichenId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModulverantwortlicheR)
