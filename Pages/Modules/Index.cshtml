                    @Html.DisplayFor(modelItem => item.Unterrichtsform)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prüfungsart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prüfungsform)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Verbindlichkeit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Literaturangaben)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModulhandbuchId)
                </td>
              
                <td>
                    @if ((await AuthorizationService.AuthorizeAsync(
                    User, item,
                    ContactOperations.Update)).Succeeded)
                    {
                        <a asp-page="./Edit" asp-route-id="@item.ModulId">Edit</a>
                        <text> | </text>
                    }

                    <a asp-page="./Details" asp-route-id="@item.ModulId">Details</a>

                    @if ((await AuthorizationService.AuthorizeAsync(
                    User, item,
                    ContactOperations.Delete)).Succeeded)
                    {
                        <text> | </text>
                        <a asp-page="./Delete" asp-route-id="@item.ModulId">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>