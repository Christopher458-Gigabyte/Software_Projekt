                    @Html.DisplayFor(modelItem => item.CuriculareZuordnung)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lernziele)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Schlüsselqualifikationen)
                </td>
